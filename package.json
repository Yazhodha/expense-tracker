{
  "name": "expense-tracker-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Expense tracker monorepo with web and mobile apps",
  "scripts": {
    "web": "cd apps/web && npm run dev",
    "mobile": "cd apps/mobile && npx expo start",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && eas build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
